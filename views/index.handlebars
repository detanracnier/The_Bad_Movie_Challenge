{{!-- {{> mainCard }} --}}
<div class="card col-sm-12 col-md-6 col-lg-4" id="OnDeck">
  <img src="{{posterPath}}" class="align-self-center mr-3" alt="No Poster">
  <div class="media-body">
    <h5 class="mt-0">{{title}}</h5>
    <p>{{overview}}</p>
  </div>
</div>


<div class="row" id="watch-lists">
  <div class="card col-sm-12 col-md-6 col-lg-4" id="watched">
    <div class="card-header">
      Watched
    </div>
    <ul class="list-group list-group-flush">
      {{#each watched}}
      {{!-- <li class="list-group-item">{{this}}</li> --}}
      {{>watchMovies}}
      {{/each}}
    </ul>
  </div>
  <div class="card col-sm-12 col-md-6 col-lg-4" id="not-watched">
    <div class="card-header">
      Not Watched
    </div>
    <ul class="list-group list-group-flush">
      {{#each unwatched}}
      {{!-- <li class="list-group-item">{{this}}</li> --}}
      {{>watchMovies}}
      {{/each}}
    </ul>
  </div>
</div>