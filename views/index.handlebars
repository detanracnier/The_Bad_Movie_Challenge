{{!-- Search bar --}}
<div class="row">
  <div class="search-container col-sm-12 col-md-12 col-lg-6">
    <h5 id="search-instructions">Search for bad movies!</h5>
    <form class="form-inline">
      <input id="search" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" />
      <button class="search-btn btn btn-outline-success my-2 my-sm-0" type="submit">
        Search
      </button>
    </form>
  </div>
</div>

{{!-- On Deck Movie Card --}}
{{#if movie}}
<div class="row">
  <div class="media col-sm-12 col-md-10 col-lg-8" id="onDeck" data-movieid="{{movie.id}}">
    <img src="{{movie.posterPath}}" class="align-self-center mr-3" alt="No Poster">
    <div class="media-body">
      <h5 class="mt-0">{{movie.title}}</h5>
      <p>{{movie.overview}}</p>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-1">
    {{!-- Filler column --}}
  </div>
  <div class="col-4">
    <button type="button" class="btn btn-primary saveBtn" id="toWatched" data-toggle="button" aria-pressed="false">
      Add to watched
    </button>
  </div>
  <div class="col-4">
    <button type="button" class="btn btn-primary saveBtn" id="toChallenged" data-toggle="button" aria-pressed="false">
      Add to challenge
    </button>
  </div>
</div>
{{/if}}

{{#unless movie}}
<div class="row">
  <div class="media col-sm-12 col-md-10 col-lg-8" id="instructions">
    <div class="media-body">
      <h5 class="mt-0 pt-3 text-center">Let's get started!</h5>
      <p class="instructions_pretty">Select a movie from your challenges list or search for a movie. The more cringy the movie the better! Challenged to a movie you really don't want to watch? Try declining the challenge and donating to charity instead!</p>
    </div>
  </div>
</div>
{{/unless}}

{{!-- Movie Lists --}}
<div class="row" id="watch-lists">
  <div class="card col-sm-12 col-md-6 col-lg-4" id="watched">
    <div class="card-header">
      Watched
    </div>
    <ul class="list-group list-group-flush">
      {{#each watchedMovies}}
        <li class="watched-list-item" data-movieid="{{id}}">{{title}}</li>
      {{/each}}
    </ul>
  </div>
  <div class="card col-sm-12 col-md-6 col-lg-4" id="not-watched">
    <div class="card-header">
      Challenges
    </div>
    <ul class="list-group list-group-flush">
      {{#each challengeMovies}}
        <li class="challenge-list-item" data-movieid="{{id}}">{{title}}</li>
      {{/each}}
    </ul>
  </div>
</div>