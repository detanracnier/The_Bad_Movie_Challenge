<h1>Index</h1>

<div class="row">
  <div class="search-container col-sm-12 col-md-12 col-lg-6">
    <h5 id="search-instructions">Search for bad movies!</h5>
    <form class="form-inline">
      <input id="search" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" />
      <button class="search-btn btn btn-outline-success my-2 my-sm-0" type="submit">
        Search
      </button>
    </form>
  </div>
</div>

{{#if movie}}
<div class="media col-sm-12 col-md-10 col-lg-8" id="onDeck" data-movieid="{{movie.id}}">
  <img src="{{movie.posterPath}}" class="align-self-center mr-3" alt="No Poster">
  <div class="media-body">
    <h5 class="mt-0">{{movie.title}}</h5>
    <p>{{movie.overview}}</p>
  </div>
</div>

<div class="row" id="buttons">
  <div class="col-1">
  </div>
  <div class="col-4">
    <button type="button" class="btn btn-primary saveBtn" id="toWatched" data-toggle="button" aria-pressed="false">
      Add to watched
    </button>
  </div>
  <div class="col-4">
    <button type="button" class="btn btn-primary saveBtn" id="toChallenged" data-toggle="button" aria-pressed="false">
     Add to challenge
    </button>
  </div>
</div>
{{/if}}

<div class="row" id="watch-lists">
  <div class="card col-sm-12 col-md-6 col-lg-4" id="watched">
    <div class="card-header">
      Watched
    </div>
    <ul class="list-group list-group-flush">
      {{#each watched}}
      {{!-- <li class="list-group-item">{{this}}</li> --}}
      {{>watchMovies}}
      {{/each}}
    </ul>
  </div>
  <div class="card col-sm-12 col-md-6 col-lg-4" id="not-watched">
    <div class="card-header">
      Not Watched
    </div>
    <ul class="list-group list-group-flush">
      {{#each unwatched}}
      {{!-- <li class="list-group-item">{{this}}</li> --}}
      {{>watchMovies}}
      {{/each}}
    </ul>
  </div>
</div>